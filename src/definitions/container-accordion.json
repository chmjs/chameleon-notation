{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://chameleon-notation/container-accordion.json#",
  "title": "Accordion container",
  "description": "Schema defines accordion container",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["accordion"]
    },
    "alternativeDesign": {
      "type": "string",
      "enum": ["", "inset", "popout"]
    },
    "color": {
      "type": "string"
    },
    "contentColor": {
      "type": "string"
    },
    "contentRipple": {
      "type": "boolean"
    },
    "elements": {
      "type": "array",
      "items": { "$ref": "container-accordion-item.json#" }
      }
  },
  "required": ["type"]
}
