  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["hlist"]
    },
    "color": {
      "type": "string"
    },
    "elements": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "flat": {
      "type": "boolean"
    },
    "gutter": {
      "type": "boolean"
    },
    "name": {
      "$ref": "field-base.json#name"
    }
  },
  "required": ["type", "color", "elements"]
}
