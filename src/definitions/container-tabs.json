{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://chameleon-notation/container-tabs.json#",
  "title": "Tabs container",
  "description": "Schema defines tabs container",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["tabs"]
    },
    "alignment": {
      "type": "string",
      "enum": ["left", "center", "right"]
    },
    "contentColor": {
      "type": "string"
    },
    "fillSpace": {
      "type": "boolean"
    },
    "headerColor": {
      "type": "string"
    },
    "elements": {
      "type": "array",
      "items": { "$ref": "container-tab-item.json#" }
    },
    "sliderColor": {
      "type": "string"
    }
  },
  "required": ["type"]
}
