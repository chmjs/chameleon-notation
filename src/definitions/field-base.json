{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://chameleon-notation/field-base.json#",
  "title": "Base field",
  "description": "Schema defines base field definition",
  "type": "object",
  "definitions": {
    "name": {
      "id": "#name",
      "type": "string"
    },
    "label": {
      "id": "#label",
      "type": "string"
    },
    "prependIcon": {
      "id": "#prependIcon",
      "type": ["string", "null"]
    },
    "appendIcon": {
      "id": "#appendIcon",
      "type": ["string", "null", "boolean"]
    },
    "prefix": {
      "id": "#prefix",
      "type": ["string", "null"],
      "maxLength": 3
    },
    "suffix": {
      "id": "#suffix",
      "type": ["string", "null"],
      "maxLength": 6
    },
    "placeholder": {
      "id": "#placeholder",
      "type": ["string", "null"]
    },
    "hint": {
      "id": "#hint",
      "type": ["string", "null"]
    },
    "persistentHint": {
      "id": "#persistentHint",
      "type": "boolean"
    },
    "tooltip": {
      "id": "#tooltip",
      "type": ["string", "null"]
    },
    "multiLine": {
      "id": "#multiLine",
      "type": "boolean"
    },
    "clearable": {
      "id": "#clearable",
      "type": "boolean"
    },
    "searchable": {
      "id": "#searchable",
      "type": "boolean"
    },
    "private": {
      "id": "#private",
      "type": "boolean"
    },
    "validateOn": {
      "id": "#validateOn",
      "type": ["string", "null"]
    },
    "mask": {
      "id": "#mask",
      "type": "object",
      "properties": {
        "predefined": {
          "type": ["boolean", "string"]
        },
        "value": {
          "type": ["string", "null"]
        }
      }
    },
    "validation": {
      "id": "#validation",
      "properties": {
        "required": {
          "type": "boolean"
        },
        "minLength": {
          "type": "number",
          "multipleOf": 1,
          "maximum": {
            "$data": "1/maxLength"
          }
        },
        "maxLength": {
          "type": "number",
          "multipleOf": 1
        },
        "pattern": {
          "type": "object",
          "properties": {
            "predefined": {
              "type": ["boolean", "string"]
            },
            "value": {
              "type": ["string", "null"]
            }
          }
        },
        "custom": {
          "type": ["string", "null"]
        }
      }
    },
    "value": {
      "id": "#value",
      "type": ["string", "null"]
    }
  },
  "required": ["type"]
}
