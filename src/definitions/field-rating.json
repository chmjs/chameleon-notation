{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://chameleon-notation/field-rating.json#",
  "title": "Rating field",
  "description": "Schema defines rating field",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["rating"]
    },
    "icon": {
      "type": "string"
    },
    "label": {
      "$ref": "field-base.json#label"
    },
    "maxRating": {
      "type": "number",
      "maximum": 10
    },
    "name": {
      "$ref": "field-base.json#name"
    },
    "private": {
      "$ref": "field-base.json#private"
    },
    "ratingInfo": {
      "type": ["boolean", "null"]
    },
    "searchable": {
      "$ref": "field-base.json#searchable"
    },
    "validation": {
      "$ref": "field-base.json#validation"
    },
    "value": {
      "id": "#value",
      "type": ["number", "null"]
    }
  },
  "required": ["name", "type", "label"]
}
