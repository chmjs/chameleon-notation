  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["richText"]
    },
    "label": {
      "$ref": "field-base.json#label"
    },
    "name": {
      "$ref": "field-base.json#name"
    },
    "private": {
      "$ref": "field-base.json#private"
    },
    "searchable": {
      "$ref": "field-base.json#searchable"
    },
    "toolbar": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "value": {
      "$ref": "field-base.json#value"
    }
  },
  "required": ["name", "type", "label", "toolbar"]
}
